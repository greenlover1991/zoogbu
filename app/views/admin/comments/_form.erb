<%= form_for([:admin,@comment]) do |f|%>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<p>
<%= f.label "Body:"%> </br>
<%= f.text_area :body %>
</p>

<p>
<%= f.label "Author:"%> </br>
<%= f.text_field :author %>
</p>

<p>
<%= f.label "Post:" %></br> 
<%= f.collection_select :post_id, Post.find(:all), :id, :title, :prompt =>"Select a post"%>
</p>

<p>
<%= f.label "Status:"%> </br>
<%= f.select :status, ["Pending","Active","Cancelled"] %>
</p>

<p>
<%= f.submit button%>
</p>
<%end%>