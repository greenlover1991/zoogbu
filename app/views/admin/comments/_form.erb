<%= f.error_messages %>

<p>
<%= f.label "Body:"%> </br>
<%= f.text_area :body %>
</p>

<p>
<%= f.label "Author:"%> </br>
<%= f.text_field :author %>
</p>

<p>
<%= f.label "Post:" %></br> 
<%= f.collection_select :post_id, Post.find(:all), :id, :title, :prompt =>"Select a post"%>
</p>

<p>
<%= f.label "Status:"%> </br>
<%= f.select :status, ["Pending","Active","Cancelled"] %>
</p>

<p>
<%= f.submit button%>
</p>
