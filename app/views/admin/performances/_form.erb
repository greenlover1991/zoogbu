<%= form_for([:admin,@performance]) do |f|%>
  <% if @performance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@performance.errors.count, "error") %> prohibited this performance from being saved:</h2>

      <ul>
      <% @performance.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<p>
<%= f.label "Event to be performed:" %></br> 
<%= f.collection_select :event_id, Event.find(:all), :id, :name, :prompt =>"Select an event"%>
</p>

<p>
<%= f.label "Performance Date:" %></br>
<%= f.date_select :event_date %>
</p>


<p>
<%= f.label "Performance Time start:" %></br>
<%= f.time_select :event_start %>
</p>

<p>
<%= f.label "Performance Time end:" %></br>
<%= f.time_select :event_end %>
</p>


<p>
<%= f.label "No. of visitors:" %></br>
<%= f.text_field :no_of_visitors %>
</p>

<p>
<%= f.submit button%>
</p>

<%end%>