<%= form_for([:admin,@post], :html=> {:multipart=>true}) do |f|%>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



<p>
<%= f.label "Image URL:" %><br/>
<%= f.file_field :img_upload %>
</p>

<p>
<%= f.label "Image Description:" %><br/>
<%= f.text_area :img_description %>
</p>

<p>
<%= f.label "Title:"%> </br>
<%= f.text_field :title %>
</p>


<p>
<%= f.label "Body:"%> </br>
<%= f.text_area :body %>
</p>

<p>
<%= f.label "Author:"%> </br>
<%= f.text_field :author %>
</p>


<p>
<%= f.label "Status:"%> </br>
<%= f.select :status, ["Pending","Active","Cancelled"] %>
</p>

<p>
<%= f.submit button%>
</p>
<%end%>