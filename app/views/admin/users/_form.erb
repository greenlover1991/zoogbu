<%= form_for([:admin,@user]) do |f|%>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<p>
<%= f.label "UserName:"%> </br>
<%= f.text_field :username %>
</p>

<p>
<%= f.label "Password:"%> </br>
<%= f.password_field :password %>
</p>


<p>
<%= f.label "Confirm Password:"%> </br>
<%= f.password_field :password_confirmation %>
</p>


<%= f.label "Employee:" %></br> 
<%= f.collection_select :employee_id, Employee.find(:all, :order=>"first_name", :conditions=>"employee_type = 'Administrator' OR employee_type = 'Human Resource' OR employee_type = 'Trainer' OR employee_type = 'Zookeeper' "), :id, :complete_name, :prompt =>"Select an employee"%>


<p>
<%= f.submit button%>
</p>
<%end%>